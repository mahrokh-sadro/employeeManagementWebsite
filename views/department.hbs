<div class="row">
    <div class="col-md-12">

        {{!-- when 404 happens??? --}}

        <hr />
        <form method="post" action="/department/update">
            {{#each department}}
            <input class="form-control" id="departmentId" name="departmentId" type="hidden"
                value="{{ this.departmentId}}" />

            <fieldset>
                <legend>{{this.departmentName}} - Department:{{this.departmentId}}</legend>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group"><label for="departmentName">departmentName</label><input
                                class="form-control" id="departmentName" name="departmentName" type="text"
                                value="{{ this.departmentName}}" /></div>
                    </div>
                    {{/each}}
                </div>
            </fieldset>
            <hr />
            <input type="submit" class="btn btn-primary pull-right" value="Update Department" /><br /><br /><br />


        </form>
    </div>
</div>