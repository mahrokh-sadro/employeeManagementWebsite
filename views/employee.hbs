<div class="row">
    <div class="col-md-12">
        <h2>{{employee.firstName}} {{ employee.lastName}} -Employee: {{ employee.employeeNum}}</h2>
        <hr />
        <form method="post" action="/employee/update">
            <fieldset>
                <legend>Personal Information</legend>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group"><label for="firstName">First Name:</label><input class="form-control"
                                id="firstName" name="firstName" type="text" value="{{ employee.firstName}}" /></div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group"><label for="lastName">Last Name:</label><input class="form-control"
                                id="lastName" name="lastName" type="text" value="{{ employee.lastName}}" /></div>
                    </div>
                </div>


                {{!-- first row --}}
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group"><label for="firstName">Email:</label><input class="form-control"
                                id="firstName" name="firstName" type="text" value="{{ employee.firstName}}" /></div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group"><label for="lastName">Social Security Num:</label><input
                                class="form-control" id="lastName" name="lastName" type="text"
                                value="{{ employee.lastName}}" /></div>
                    </div>
                </div>


                {{!-- second row --}}
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group"><label for="firstName">Address (Street):</label><input
                                class="form-control" id="firstName" name="firstName" type="text"
                                value="{{ employee.firstName}}" /></div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group"><label for="lastName">Address (City):</label><input class="form-control"
                                id="lastName" name="lastName" type="text" value="{{ employee.lastName}}" /></div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group"><label for="firstName">Address (State):</label><input
                                class="form-control" id="firstName" name="firstName" type="text"
                                value="{{ employee.firstName}}" /></div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group"><label for="lastName">Address (Zip Code):</label><input
                                class="form-control" id="lastName" name="lastName" type="text"
                                value="{{ employee.lastName}}" /></div>
                    </div>
                </div>




                {{!-- third row --}}
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group"><label for="firstName">Manager:</label><input class="form-control"
                                id="firstName" name="firstName" type="text" value="{{ employee.firstName}}" /></div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group"><label for="lastName">Employee's Manager Number:</label><input
                                class="form-control" id="lastName" name="lastName" type="text"
                                value="{{ employee.lastName}}" /></div>
                    </div>



                    <div class="col-md-3">

                        <div class="form-group"><label for="lastName">Status:</label></div>


                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1"
                                value="option1">
                            <label class="form-check-label" for="inlineRadio1">1</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2"
                                value="option2">
                            <label class="form-check-label" for="inlineRadio2">2</label>
                        </div>



                    </div>





                    <div>
                        <div class="col-md-3">

                            <label for="inputState">Department</label>
                            <select id="inputState" class="form-control">
                                <option selected>Creative Services</option>
                                <option>Product Development</option>
                                <option>Marketing</option>
                                <option>Strategic Planning</option>
                                <option>Accounting</option>
                                <option>Human Resources</option>
                                <option>Quality Analysis</option>
                            </select>
                        </div>
                    </div>

                </div>

                {{!-- forth row --}}

                {{!-- second row --}}
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group"><label for="firstName">Hire Date</label><input class="form-control"
                                id="firstName" name="firstName" type="text" value="{{ employee.firstName}}" /></div>
                    </div>
                </div>

            </fieldset>
            <hr />
            <input type="submit" class="btn btn-primary pull-right" value="Update Employee" /><br /><br /><br />
        </form>
    </div>
</div>