<div class="container"> 

<div class="row">
  <div class="col-md-12">
    <h2>Departments <a href="/departments/add" class="btn btn-primary pull-right">Add New Department</a> </h2>
    <hr />
    <div class="table-responsive">
      <table class="table ">
        <thead>
          <tr>
            <th>Department Number</th>
            <th>Department Name</th>
          </tr>
        </thead>
        <tbody>
          {{#each departments}}
          <tr>

            <th scope="row"><a href="/employees?department={{this.departmentId}}">{{this.departmentId}}</a></th>
            <td><a href="/department/{{departmentId}}">{{departmentName}}</a></td>
            <td><a href="/departments/delete/{{this.departmentId}}" class="btn btn-danger pull-right">remove</a></td>
         
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

  </div>
  <div class="col-md-12 text-center">
    {{#unless departments}}
    <strong>{{message}}</strong>
    {{/unless}}
  </div>
</div>
</div>